extends layout

block content
    div.container
      body
        //- Hidden user id behind web elements so we can access users id
        p.hidden #{user.player_id}!
        p(id="username").hidden #{user.username}
        title Tank City: Lobby
        div.fake-jumbotron-div
          div.game-portion-of-screen
            div.highscore-table-portion
              h2 Scoreboard
              table.scoreboard-table-lobby
                tbody
                  each val in scores
                    tr.score-table-element-lobby
                      td= val.first_name
                      td= val.wins
                  else
                    li No values
            div.game-section
              a(href = "../game")
                img.game-section-image(src='/images/logo-w-play-btn.png')
            div.profile-stats-portion
              h2.profile-stats-title #{user.first_name}
          div.tank-city-talks
            h2.tank-city-talks-title Tank City Talks
            div.messages
              ul(id="lobby-messages")
                each chat in chats
                  li #{chat.username + ": " + chat.message + "\n"}
                  br
            form
              .input-group
                  input.form-control(class='user-lobby-input' type='text', placeholder='Enter message' id='user-lobby-input' name='msg')
                  span.input-group-btn
                      button.btn.btn-default(class='btn btn-primary send-lobby-message' id='send-lobby-message' style='width: 100px' type='submit' value='submit') Send